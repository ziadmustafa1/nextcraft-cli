{
  "name": "nextcraft-cli",
  "version": "0.1.4",
  "description": "CLI tool for creating NextCraft projects",
  "main": "dist/index.js",
  "bin": {
    "nextcraft": "dist/index.js"
  },
  "files": [
    "dist",
    "templates",
    "README.md"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "dev": "tsc --watch",
    "build": "tsc && chmod +x dist/index.js dist/forge.js",
    "clean": "rm -rf dist",
    "lint": "eslint src --ext .ts",
    "test": "jest",
    "prepublishOnly": "pnpm build",
    "prepare-publish": "bash scripts/prepare-publish.sh",
    "local-test": "npm link"
  },
  "keywords": [
    "nextjs",
    "cli",
    "generator",
    "create-app",
    "scaffold",
    "template",
    "fullstack"
  ],
  "author": "NextCraft Team",
  "license": "MIT",
  "homepage": "https://github.com/ziadmustafa1/NextCraft#readme",
  "bugs": {
    "url": "https://github.com/ziadmustafa1/NextCraft/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ziadmustafa1/NextCraft.git"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "enquirer": "^2.4.1",
    "execa": "^8.0.1",
    "fs-extra": "^11.2.0",
    "ora": "^8.0.1",
    "picocolors": "^1.0.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "typescript": "^5.3.0"
  }
}
